            "recipe[emacs]",
            "recipe[git]",
            "recipe[ark]",
            "recipe[maven]"
        ],
	"test": [
            "role[base]",
            "recipe[apache]"
        ]
    },
    "override_attributes": {
	"apache2": {
	    "max_children": "50"
	}
    }
}

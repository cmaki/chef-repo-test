    "run_list": [
	"recipe[java]",
	"role[base]",
	"recipe[emacs]",
	"recipe[git]",
	"recipe[ark]",
	"recipe[maven]"
	
    ],
    "env_run_lists" : {
	"production" : [],
	"preprod" : [],

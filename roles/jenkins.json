{
    "name": "jenkins",
    "description": "Role for jenkins build server", 
    "run_list": [
	"role[base]",
	"recipe[java::openjdk]", 
        "recipe[apache2]",
        "recipe[jenkins]",
        "recipe[git]",
        "recipe[ark]",
        "recipe[maven]",
        "recipe[jenkins::proxy_apache2]",
	"recipe[hostname]",
	"recipe[postgresql::server]",
	"recipe[gradle]", 
	"recipe[android-sdk]"

    ],
    "override_attributes": {
	"maven": {
	    "repository_root": "/var/lib/jenkins",
	    "version": "3"
	},
	"java": {
	    "jdk_version": "7"
	    "remove_deprecated_packages": "true"
	},
	"hostname": {
	    "fqdn": "jenkins.vm"
	},
	"postgresql": {
	    "password": {
		"postgres": "maki"
	    }
	}
    }

}

{
    "name": "jenkins",
    "description": "Role for jenkins build server", 
    "run_list": [
	"role[base]",
	"recipe[java::openjdk]",
        "recipe[apache2]",
        "recipe[jenkins::server]",
        "recipe[git]"
    ],
    "override_attributes": {
	"maven": {
	    "repository_root": "/var/lib/jenkins",
	    "version": "3"
	},
	"java": {
	    "jdk_version": "7"
	},
	"hostname": {
	    "fqdn": "jenkins.vm"
	},
	"jenkins": {
	    "http_proxy": {
		"variant": "apache2"
	    }
	},
	"postgresql": {
	    "password": {
		"postgres": "maki"
	    }
	}
    }

}

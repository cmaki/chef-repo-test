{
    "name": "jenkins",
    "description": "Role for jenkins build server", 
    "run_list": [
	"role[base]",
        "recipe[java]",
        "recipe[apache2]",
        "recipe[jenkins]",
        "recipe[git]",
        "recipe[ark]",
        "recipe[maven]",
        "recipe[jenkins::proxy_apache2]",
	"recipe[hostname]"
    ],
    "override_attributes": {
	"maven": {
	    "repository_root": "/var/lib/jenkins",
	    "version": "3"
	},
	"hostname": {
	    "set_fqdn": "jenkins.vm"
	}
    }

}
